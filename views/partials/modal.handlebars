<div class="modal fade" id="articleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">{{this.title}}</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-md-4">
                            <img src="{{this.picture}}" class="mr-3" alt="article picture">
                        </div>
                        <div class="col-md-8">
                            <p>{{this.summary}}</p>
                        </div>
                    </div>
                </div>
                ...
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Go To Article</button>
                <button type="button" class="btn btn-primary">Save To Your Favorites</button>
            </div>
        </div>
    </div>
</div>